    "@monorepolint/core": "0.5.0",
    "@percy/cli": "^1.31.8",
    "@percy/storybook": "^5.0.3",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-onboarding": "^10.2.8",
    "@storybook/builder-webpack5": "^10.2.8",
    "@storybook/html": "^10.2.8",
    "@storybook/react": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "storybook": "^10.2.8",
    "@types/node": "^20.19.33",
    "babel-loader": "^10.0.0",
    "core-js": "^3.48.0",
    "dotenv": "^17.3.1",
